<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.apps.poll.dao.extend.QuestionnaireVMMapper">

	<resultMap type="com.briup.apps.poll.bean.extend.QuestionnaireVM" id="QuestionnaireVMResultMap">
			<id column="id" property="id"/>
     		<result column="name" property="name"/>
     		<result column="description" property="description"/>
		<collection
			column="id"
			property="questionVM"
			select="com.briup.apps.poll.dao.extend.QuestionVMMapper.selectAllQuestion"/>
	</resultMap>


	<select id="queryQuestionnaire"  resultMap="QuestionnaireVMResultMap">
		select * from  poll_questionnaire 
	</select>
	
	<select id="selectById" parameterType="Long" resultMap="QuestionnaireVMResultMap">
		select * from  poll_questionnaire where id=#{id}
	</select>

</mapper>