<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.apps.poll.dao.extend.QuestionVMMapper">
<select id="selectAll" resultMap="QuestionVMResultMap">
select * from poll_question
</select>

<!-- 定义结果集 -->
<resultMap type="com.briup.apps.poll.bean.Options"
           id="OptionsResultMap">
    <result column="question_id" property="questionId"/>
</resultMap>

<!-- <resultMap type="com.briup.apps.poll.bean.Qq"
           id="QqResultMap">
 <result column="question_id" property="questionId"/>
 <result column="questionnaire_id" property="questionnaireId"/>
 </resultMap> -->

 
 
 
<resultMap type="com.briup.apps.poll.bean.extend.QuestionVM" 
           id="QuestionVMResultMap">
     <id column="id" property="id"/>
     <result column="name" property="name"/>
     <result column="questionType" property="questionType"/>

     <collection column="id" 
                 property="options" 
                 javaType="ArrayList"
             ofType="com.briup.apps.poll.bean.Options" 
             select="selectOptionsByQuestionId">
     </collection>
  <!-- <collection column="id" property="qq" javaType="ArrayList"
             ofType="com.briup.apps.poll.bean.Qq" 
             select="selectQqByQqId">
    </collection> -->   
    
</resultMap>

<!-- 通过题目id查询属于该题目的选项信息 -->



<select id="selectOptionsByQuestionId" 
        parameterType="long" 
        resultMap="OptionsResultMap">
select * from poll_options where question_id=#{id}
</select>
